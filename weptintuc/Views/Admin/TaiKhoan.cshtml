@using weptintuc.Models
@using PagedList.Mvc
@model PagedList.PagedList<TAI_KHOAN>

@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÍ TÀI KHOẢN</h2>

<p>
    @Html.ActionLink("THÊM TÀI KHOẢN MỚI", "ThemTK")
</p>
<table class="table" align="center" border="1">
    <tr style="text-align: center; font-weight:bold; font-family:Arial; font-size:18px; color:white; background-color: blue">
        <th style="text-align:center; width:10px">
            Mã tài khoản
        </th>
        <th style="text-align:center; width:40px">
            Tên tài khoản
        </th>
        <th style="text-align:center; width:40px">
            Mật khẩu
        </th>
        <th style="text-align:center; width:50px">
            Tuỳ chọn
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MATK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TEN_TAI_KHOAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MAT_KHAU)
            </td>
            <td>
                @Html.ActionLink("Sửa", "SuaTK", new { id = item.MATK }) |
                @Html.ActionLink("Chi tiết", "ChitietTK", new { id = item.MATK }) |
                @Html.ActionLink("Xoá", "XoaTK", new { id = item.MATK })
            </td>
        </tr>
    }

</table>
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("Tintuc", new { page = page }))
</div>
<style>
    .pagination li {
        display: inline;
        font-size: 18px;
    }
</style>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
