@model weptintuc.Models.TAI_KHOAN

@{
    ViewBag.Title = "SuaTK";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>SuaTK</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SỬA TÀI KHOẢN</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MATK)

        <div class="form-group">
            <div style="margin-right:50px">
                <span>Tên Tài Khoản</span>
            </div>
            
                @Html.EditorFor(model => model.TEN_TAI_KHOAN)
                @Html.ValidationMessageFor(model => model.TEN_TAI_KHOAN)

        </div>

        <div class="form-group">
            <div style="margin-right:50px">
                <span> Mật Khẩu</span>
            </div>
            
           
                @Html.EditorFor(model => model.MAT_KHAU)
                @Html.ValidationMessageFor(model => model.MAT_KHAU)
            
        </div>

        <div class="form-group">
           
                <input type="submit" value="Lưu" class="btn btn-default" />
            
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách tài khoản", "TaiKhoan")
</div>
