@*@model IEnumerable<weptintuc.Models.KHACH_HANG>*@
@using weptintuc.Models
@using PagedList.Mvc
@model PagedList.PagedList<KHACH_HANG>




@{
    ViewBag.Title = "user";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<br />
<h3>Thông tin khách hàng</h3>
<hr />

<p>
    @Html.ActionLink("THÊM KHÁCH HÀNG MỚI", "ThemKH")
</p>
<table class="table" align="center" border="1">
    <tr style="text-align: center; font-weight:bold; font-family:Arial; font-size:18px; color:white; background-color: blue">
        <th style="text-align:center; width:100px">
            Tên Tài Khoản
        </th>
        <th style="text-align:center; width:90px">
            Mật Khẩu
        </th>
        <th style="text-align:center; width:200px">
            Họ Tên
        </th>
        <th style="text-align:center; width:100px">
            Địa Chỉ
        </th>
        <th style="text-align:center; width:50px">
            Số Điện Thoại
        </th>
        <th style="text-align:center; width:200px">
            Ngày Sinh
        </th>
        <th style="text-align:center; width:200px">
            Email
        </th>
        <th style="text-align:center; width:150px">
            Tuỳ chọn
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TENTK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MATKHAU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HOTEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIACHI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIENTHOAI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYSINH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMAIL)
            </td>
            <td>
                @Html.ActionLink("Sửa", "SuaKH", new { id = item.MAKH }) |
                @Html.ActionLink("Xoá", "XoaKH", new { id = item.MAKH })
            </td>
        </tr>
    }

</table>
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("user", new { page = page }))
</div>
<style>
    .pagination li {
        display: inline;
        font-size: 18px;
    }
</style>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
