@model weptintuc.Models.KHACH_HANG

@{
    ViewBag.Title = "SuaKH";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>SuaKH</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SỬA THÔNG TIN KHÁCH HÀNG</h4>
        <hr />
        @*@Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MATK)*@

        <div class="form-group">
            <div style="margin-right:50px">
                <span>Tên Tài Khoản</span>
            </div>

            @Html.EditorFor(model => model.TENTK)
            @Html.ValidationMessageFor(model => model.TENTK)

        </div>

        <div class="form-group">
            <div style="margin-right:50px">
                <span> Mật Khẩu</span>
            </div>


            @Html.EditorFor(model => model.MATKHAU)
            @Html.ValidationMessageFor(model => model.MATKHAU)

        </div>
        <div class="form-group">
            <div style="margin-right:50px">
                <span>Họ và Tên</span>
            </div>


            @Html.EditorFor(model => model.HOTEN)
            @Html.ValidationMessageFor(model => model.HOTEN)

        </div>
        <div class="form-group">
            <div style="margin-right:50px">
                <span>Địa Chỉ</span>
            </div>


            @Html.EditorFor(model => model.DIACHI)
            @Html.ValidationMessageFor(model => model.DIACHI)

        </div>
        <div class="form-group">
            <div style="margin-right:50px">
                <span>Số Điện Thoại</span>
            </div>


            @Html.EditorFor(model => model.DIENTHOAI)
            @Html.ValidationMessageFor(model => model.DIENTHOAI)

        </div>
        <div class="form-group">
            <div style="margin-right:50px">
                <span>Ngày Sinh</span>
            </div>


            @Html.EditorFor(model => model.NGAYSINH)
            @Html.ValidationMessageFor(model => model.NGAYSINH)

        </div>
        <div class="form-group">
            <div style="margin-right:50px">
                <span>Email</span>
            </div>


            @Html.EditorFor(model => model.EMAIL)
            @Html.ValidationMessageFor(model => model.EMAIL)

        </div>

        <div class="form-group">

            <input type="submit" value="Lưu" class="btn btn-default" />

        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách khách hàng", "user")
</div>
