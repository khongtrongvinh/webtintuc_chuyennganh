@model weptintuc.Models.LOAI_TIN

@{
    ViewBag.Title = "ThemLoaiTin";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>Thêm loại tin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="width:500px; margin:auto">
        <div class="form-horizontal">
            <h4>THÊM LOẠI TIN</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <span>TÊN LOẠI TIN</span>

                @Html.EditorFor(model => model.TEN_LOAI_TT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TEN_LOAI_TT, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                <input type="submit" value="Thêm" class="btn btn-default" />

            </div>
        </div>
        <div>
            @Html.ActionLink("Trở về danh sách loại tin", "LoaiTinTuc")
        </div>
    </div>
}